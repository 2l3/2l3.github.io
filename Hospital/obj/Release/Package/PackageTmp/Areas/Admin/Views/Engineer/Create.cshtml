@model Hospital.Models.Engineer
@using Hospital.Resources;

@{
    ViewBag.Title = Resource.Engineers;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    @using (Html.BeginForm("Create", "Engineer", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <p style="text-align:center;color:red">@ViewBag.Message</p>

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.NameAr :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.NameAr, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NameAr, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.NameEn :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.NameEn, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NameEn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label(Resource.SignImg, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    <div class="input-group image-preview">
                        <span class="input-group-btn">
                            <!-- image-preview-input -->
                            <div class="btn btn-default image-preview-input" style="width:100%;">
                                <input type="file" id="Img" accept="image/png, image/jpeg, image/jpg" name="Img" /> <!-- rename it -->
                            </div>
                        </span>

                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@Resource.Save" class="btn btn-primary" name="Save" />
                    <a class="btn btn-default" href="@Url.Action("Index","Engineer")"> @Resource.BackToHome </a>
                </div>
            </div>
        </div>
    }


</div>

<script type="text/javascript" src="~/Content2/Ar-assets/js/lib/jquery-1.11.min.js"></script>

<script>


    $(function () {
        $('form').submit(function () {
            $('input[name="Save"]').prop('disabled', true);
        });
    });

</script>