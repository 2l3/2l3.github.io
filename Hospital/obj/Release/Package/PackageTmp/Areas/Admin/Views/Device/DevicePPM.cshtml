@model IEnumerable<Hospital.Models.DeviceUnit>
@using Hospital.Resources;
@{
    ViewBag.Title = Resource.DevicePPM;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/Content2/Ar-assets/js/lib/jquery-1.11.min.js"></script>
<script>

    function GetReportPrint() {
        var ReportType = $('#ReportType :selected').val();
        if (ReportType == 1)
            return GetCenterReport();

        var DateFrom = $('#DateFrom').val();
        var DateTo = $('#DateTo').val();
        if (DateFrom == "" || DateTo == "")
            return alert("@Resource.ChooseDates");
        window.open("/Admin/Device/PMMReportPrint?DateFrom=" + DateFrom + "&DateTo=" + DateTo + "&DeviceUnitId=" + $('#DeviceUnit :selected').val() + "&EngineerId=" + $('#Engineer :selected').val() + "&DeviceCategoryId=" + $('#DeviceCategory :selected').val() + "&DeviceTypeId=" + $('#DeviceTypes :selected').val() + "&ScheduleTypeId=" + $('#ScheduleType :selected').val() + "&Daman=" + $('#Daman :selected').val() , '_blank'); 
    }

    function GetCenterReport()
    {
        var DateFrom = $('#DateFrom').val();
        var DateTo = $('#DateTo').val();
        if (DateFrom == "" || DateTo == "")
            return alert("@Resource.ChooseDates");
        window.open("/Admin/CenterDevice/PMMReportPrint?DateFrom=" + DateFrom + "&DateTo=" + DateTo + "&CenterDeviceUnitId=" + $('#CenterDeviceUnits :selected').val() + "&EngineerId=" + $('#Engineer :selected').val() + "&DeviceCategoryId=" + $('#DeviceCategory :selected').val() + "&DeviceTypeId=" + $('#DeviceTypes :selected').val() + "&CenterId=" + $('#Centers :selected').val() + "&ScheduleTypeId=" + $('#ScheduleType :selected').val() + "&Daman=" + $('#Daman :selected').val(), '_blank');
    }

    function ReportTypeChange() {
        if ($('#ReportType option:selected').val() == 1) {
            $('#CenterDiv').show();
            $('#CenterUnitsDiv').show();
            $('#UnitsDiv').hide();
            $('.Center').hide();
            var CenterId = $('#Centers option:selected').val();
            $('.Center_' + CenterId).show();
            $('#CenterDeviceUnits').val(0);
        } else {
            $('#CenterDiv').hide();
            $('#CenterUnitsDiv').hide();
            $('#UnitsDiv').show();
        }
    }

    function CenterChanged() {
        $('.Center').hide();
        var CenterId = $('#Centers option:selected').val();
        $('.Center_' + CenterId).show();
        $('#CenterDeviceUnits').val(0);
    }

</script>



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @Resource.DevicePPM
                </h3>
            </div>
            <div class="panel-body">
                <!--Table Wrapper Start-->
                <div class="row">
                    <div class="col-lg-2">
                        <label>@Resource.DateFrom</label>
                        <input type="text" placeholder="@Resource.DateFrom" value="" class="form-control" id="DateFrom" />
                    </div>
                    <div class="col-lg-2">
                        <label>@Resource.DateTo</label>
                        <input type="text" placeholder="@Resource.DateTo" value="" class="form-control" id="DateTo" />
                    </div>
                    <div class="col-lg-3">
                        <label>@Resource.Engineers</label>
                        <select class="form-control" id="Engineer">
                            <option value="0" selected>@Resource.Engineers</option>
                            @foreach (var item in ViewBag.Engineers)
                            {
                                if (ViewBag.SelectedEngineerId == item.Id)
                                {
                                    if (CultureHelper.CurrentLanguageCode == 1)
                                    {
                                        <option selected value="@item.Id">@item.NameAr</option>
                                    }
                                    else
                                    {
                                        <option selected value="@item.Id">@item.NameEn</option>
                                    }
                                }
                                else
                                {
                                    if (CultureHelper.CurrentLanguageCode == 1)
                                    {
                                    <option value="@item.Id">@item.NameAr</option>
                                    }
                                    else
                                    {
                                    <option value="@item.Id">@item.NameEn</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <label>@Resource.Type</label>
                        <select class="form-control" id="ReportType" onchange="ReportTypeChange()">
                            <option value="0" selected>@Hospital.Resources.Resource.Hospital</option>
                            <option value="1">@Hospital.Resources.Resource.Center</option>
                        </select>
                    </div>
                    <div class="col-lg-3" id="CenterDiv" style="display:none">
                        <label>@Resource.Centers</label>
                        <select class="form-control" id="Centers" onchange="CenterChanged()">
                            @foreach (var item in ViewBag.Centers)
                            {
                                if (CultureHelper.CurrentLanguageCode == 1)
                                {
                                    <option value="@item.Id">@item.NameAr</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.NameEn</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-lg-3" id="CenterUnitsDiv" style="display:none">
                        <label>@Resource.CenterDeviceUnits</label>
                        <select class="form-control" id="CenterDeviceUnits">
                            <option value="0" selected>@Hospital.Resources.Resource.All</option>
                            @foreach (var item in ViewBag.CenterDeviceUnits)
                            {
                                if (CultureHelper.CurrentLanguageCode == 1)
                                {
                                    <option class="Center Center_@item.CenterId" value="@item.Id">@item.NameAr</option>
                                }
                                else
                                {
                                    <option class="Center Center_@item.CenterId" value="@item.Id">@item.NameEn</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-lg-3" id="UnitsDiv">
                        <label>@Resource.DeviceUnits</label>
                        <select class="form-control" id="DeviceUnit">
                            <option value="0" selected>@Hospital.Resources.Resource.All</option>
                            @foreach (var item in Model)
                            {
                                if (CultureHelper.CurrentLanguageCode == 1)
                                {
                                    <option value="@item.Id">@item.NameAr</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.NameEn</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <label>@Resource.DeviceTypes</label>
                        <select class="form-control" id="DeviceTypes">
                            <option value="0" selected>@Hospital.Resources.Resource.All</option>
                            @foreach (var item in ViewBag.DeviceTypes)
                            {
                                if (CultureHelper.CurrentLanguageCode == 1)
                                {
                                    <option value="@item.Id">@item.NameAr</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.NameEn</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <label>@Resource.DeviceCategory</label>
                        <select class="form-control" id="DeviceCategory">
                            <option value="0" selected>@Hospital.Resources.Resource.All</option>
                            <option value="1">A</option>
                            <option value="2">B</option>
                            <option value="3">C</option>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <label>@Resource.DeviceStatus</label>
                        <select class="form-control" id="ScheduleType">
                            <option value="0" selected>@Hospital.Resources.Resource.All</option>
                            <option value="1">@Resource.ScheduledDevices</option>
                            <option value="2">@Resource.NotScheduledDevices</option>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <label>@Resource.DamanStatus</label>
                        <select class="form-control" id="Daman">
                            <option value="0" selected>@Hospital.Resources.Resource.All</option>
                            <option value="1">
                            @Resource.DamanUnder
                          </option>
                            <option value="2">
                            @Resource.DamanOut
                            </option>
                        </select>
                    </div>

                    <div class="col-lg-2">
                        <br />
                        <input class="btn btn-primary btn-sm" type="button" value="@Resource.Print" onclick="GetReportPrint()" />
                    </div>

                </div>
                <!--Table Wrapper Finish-->
            </div>
        </div>
    </div>
</div>


