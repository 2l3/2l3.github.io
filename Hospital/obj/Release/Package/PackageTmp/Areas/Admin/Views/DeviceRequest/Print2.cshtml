@model Hospital.Models.DeviceRequest
@{
    ViewBag.Title = "Print";
    Layout = null;
}
<html lang="ar-eg" dir="rtl">
<head>
    <!-- Plugin Css Put Here -->
    <link href="~/Content2/Ar-assets/css/bootstrap-rtl.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content2/Ar-assets/css/rtl-css/plugins/selectize.bootstrap3-rtl.css">
    <link rel="stylesheet" href="~/Content2/Ar-assets/css/rtl-css/plugins/bootstrap-progressbar-3.1.1-rtl.css">
    <link rel="stylesheet" href="~/Content2/Ar-assets/css/rtl-css/plugins/jquery-jvectormap-rtl.css">

    <link href="https://fonts.googleapis.com/css2?family=Tajawal&amp;display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Tajawal',Tahoma !important;
        }

        h1, h2, h3, h4, h5, h6, a, span, th {
            font-family: 'Tajawal',Tahoma !important;
        }
    </style>

    <style>
        h1, h2, h3, h4, h5, h6, a, span, th {
            text-align: right;
        }

        body {
            text-align: right;
        }

        table, th, td {
            border: 1px solid black;
            padding-right: 5px;
        }

        .dot {
            height: 100px;
            width: 100px;
            background-color: #efebeb;
            border-radius: 50%;
            display: inline-block;
        }

        tr {
            height: 30px !important;
        }

        .D {
            font-weight: 300 !important;
            font-size: 12px;
        }

        @@page {
            size: auto; /* auto is the initial value */
            margin: 0; /* this affects the margin in the printer settings */
            border: 1px solid black;
        }
    </style>
</head>
<body style="overflow-x:hidden;border: 1px solid;">
    <div class="row">
        <div class="col-xs-5" style="padding-right:45px;padding-top:20px;">
            @foreach (var item in ViewBag.ReportSetting)
            {
                <p style="text-align:right;font-size:@item.FontSize">@item.DescAr</p>
            }
        </div>
        <div class="col-xs-2" style="padding-top:20px">
            @if (ViewBag.ReportImage == "" || ViewBag.ReportImage == null)
            {
                <img src="~/Content2/l.jpg" style="width:100%" />
            }
            else
            {
                <img src="~/Uploads/ReportLogo/@ViewBag.ReportImage" style="width:100%" />
            }
        </div>
        <div class="col-xs-5" style="padding-left:45px;padding-top:20px;">
            @foreach (var item in ViewBag.ReportSetting)
            {
                <p style="text-align:left;font-size:@item.FontSize">@item.DescEn</p>
            }
        </div>
    </div>
    <div class="row">
        <h4 style="text-align:center"> طلب وكيل  <br /> Service request sheet</h4>
        <div style="margin: 0 40px 0px 40px;">
            <table style="width:100%;">
                <tbody>
                    <tr>
                        <td colspan="2" style="text-align:center">
                            Under Warranty <input type="checkbox" /> تحت الضمان
                        </td>
                        <td style="text-align:center">
                            Under sub contract <input type="checkbox" /> تحت عقد الباطن
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;"> الشركة الوكيل :   </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;"> : M/S  </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;"> مسئول الشركة الوكيل :   </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;"> : ATN  </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;">   رقم الفاكس :   </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;"> : Fax No  </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;"> الرجاء إرسال المهندس المختص ل :   </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;"> : Please send your specialized engineer to  </p>
                            <br />
                            <p>................................................................................................................................................................................</p>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align:center">
                            Install <input type="checkbox" /> تركيب
                        </td>
                        <td style="text-align:center">
                            PPM <input type="checkbox" /> الصيانة الوقائية
                        </td>
                        <td style="text-align:center">
                            Repair <input type="checkbox" /> الأصلاح
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;">  أسم الجهاز :  @Model.Device.NameAr </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;"> Equipment :  @Model.Device.NameEn</p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;">  الشركة المصنعة : @Model.Device.Com</p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;">: Manufacturet  </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;"> الموديل :  @Model.Device.Model</p>

                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;">: Model  </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;"> الموقع : </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;">: Site  </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;"> الأعطال : </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;">: Fault  </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;">
                                نحن نتطلع الي العمل السريع الخاص بهذا الأعطال <br />
                                اذا كان لديك اي استفسار بخصوص الأعطال لا تتردد <br />
                                في الأتصال بالصيانة الطبية علي الهاتف أو الفاكس <br />
                                رقم :
                            </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;">
                                We are looking forward your quick action in <br />
                                this matter , If you have anything in this <br />
                                matter , Please do not hesitate to contact <br />
                                medical maintenance on this telephone or fax <br />
                                : number
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;"> مهندس المستشفي : </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;">: Hospital engineer  </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;"> التوقيع : </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;">: Signature  </p>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <p style="float:right;padding-top:5px;">  التاريخ : </p>
                            <p style="float:left;text-align:left;padding-top:5px;padding-left:5px;">: Date  </p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script type="text/javascript" src="~/Content2/Ar-assets/js/lib/jquery-1.11.min.js"></script>
    <script>

        window.print();

    </script>
</body>
</html>



