
@using Hospital.Resources;
@{
    ViewBag.Title = Resource.DeletedCenterRequests;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<input type="hidden" value="@CultureHelper.CurrentLanguageCode" id="Lang" />
<input type="hidden" value="@User.IsInRole("HealthCenterCanceledRequestDelete")" id="HealthCenterCanceledRequestDelete" />
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @Resource.DeletedCenterRequests
                    @if (User.IsInRole("HealthCenterCanceledRequestDelete"))
                    {
                        <button class="btn btn-app" id="DeleteSelected" href="#" onclick="DeleteSelected()" style="float:@Resource.right;margin-top:-7px;">
                            <i class="fa fa-trash-o"></i>
                            @Resource.Delete
                        </button>
                    }
                   
                </h3>
            </div>
            <div class="panel-body">
                <!--Table Wrapper Start-->
                <div class="row">
                    <div class="col-lg-3">
                        <input type="text" placeholder="@Resource.DeviceName" value="" class="form-control" id="Name" />
                    </div>
                    <div class="col-lg-2">
                        <select class="form-control" id="RequestType" name="RequestType">
                            <option value="0" selected>@Hospital.Resources.Resource.RequestType</option>
                            <option value="1">@Hospital.Resources.Resource.DamageRequest</option>
                            <option value="2">@Hospital.Resources.Resource.MovementRequest</option>
                            <option value="3">@Hospital.Resources.Resource.AddPPMRequest</option>
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <select class="form-control DeviceUnit" id="DeviceUnitId" name="DeviceUnitId">
                            <option value="0" selected>@Hospital.Resources.Resource.DeviceUnit</option>
                            @foreach (var item in ViewBag.DeviceUnits)
                            {
                                if (CultureHelper.CurrentLanguageCode == 1)
                                {
                                    <option value="@item.Id">@item.NameAr</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.NameEn</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <input type="date" placeholder="@Resource.CreatedDate" value="" class="form-control" id="Date" />
                    </div>
                    <div class="col-lg-2">
                        <input class="btn btn-primary btn-sm" type="button" value="@Resource.Search" onclick="GetDeviceRequests()" />
                    </div>

                </div>
                <div class="ls-editable-table table-responsive ls-table">
                    <br /><br />
                    <table class="table table-bordered table-striped table-bottomless" id="Table">
                        <thead>
                            <tr>
                                <th width="2%">
                                    <input type="checkbox" id="CheckBoxAll" name="CheckBoxAll" onchange="CheckBoxAll()" />
                                </th>
                                <th width="2%">  </th>
                                <th width="15%">  @Resource.CenterName </th>
                                <th width="15%">  @Resource.DeviceName </th>
                                <th> @Resource.RequestType </th>
                                <th width="7%"> @Resource.CreatedDate</th>
                                <th width="7%"> @Resource.DeleteDate</th>
                                <th width="7%"> @Resource.DeletedUser</th>
                                <th width="15%">@Resource.Operations  </th>
                            </tr>
                        </thead>
                        <tbody></tbody>

                    </table>
                </div>
                <!--Table Wrapper Finish-->
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="~/Content2/Ar-assets/js/lib/jquery-1.11.min.js"></script>
<script src="~/Content2/moment.js"></script>
<script src="~/Content2/dateFormat.js"></script>
<script>

    $(document).ready(function () {
        GetDeviceRequests();
        //$("#Table2").DataTable();
    });

    function GetDeviceRequests() {
        $("#Table").dataTable().fnDestroy();
        $("#Table").DataTable({
            "ajax": {
                "url": "/CenterDeviceRequest/GetDeletedDeviceRequests",
                "type": "POST",
                "datatype": "json",
                "cache": true,
                "data": { Name: $("#Name").val(), RequestType: $("#RequestType :selected").val(), DeviceUnitId: $("#DeviceUnitId :selected").val(), Date: $('#Date').val() }
            },

            "columns": [
                {
                    "data": "Id", "render": function (data, type, row, meta) {
                        return '<input type="checkbox" value="' + row.Id + '" name="CheckBox" class="CheckBox" />';
                    }
                },
                 {
                     "data": "Id", "render": function (data, type, row, meta) {
                         if (row.IsActive == true) {
                             return "<i class='fa fa-check fa-lg' style='color:green'></i>";
                         }
                         else {
                             return "<i class='fa fa-times fa-lg'  style='color:red'></i>";
                         }
                     }
                },
                 {
                     "data": "Id", "render": function (data, type, row, meta) {
                         if ($('#Lang').val() == "1") {
                             return row.Device.CenterDeviceUnit.Center.NameAr;
                         }
                         else {
                             return row.Device.CenterDeviceUnit.Center.NameEn;
                         }
                     }
                 },
                {
                    "data": "Id", "render": function (data, type, row, meta) {
                        if (row.WithNoBarCode == true) {
                            return row.DeviceName;
                        }
                        if ($('#Lang').val() == "1") {
                            return row.Device.NameAr;
                        }
                        else {
                            return row.Device.NameEn;
                        }
                    }
                },
                {
                    "data": "Id", "render": function (data, type, row, meta) {
                       if (row.RequestType == 1)
                        {
                            return '@Hospital.Resources.Resource.DamageRequest ( ' + row.Reason + ' )';
                        }
                        else if(row.RequestType == 2)
                        {
                            var ToUnit = $('#Lang').val() == "1" ? row.ToUnitAr : row.ToUnitEn;
                            return '@Hospital.Resources.Resource.MovementRequest ( ' + row.Reason + ' ) -> ' + ToUnit;
                        }
                        else
                        {
                             return '@Hospital.Resources.Resource.AddPPMRequest ( ' + row.Reason + ' )';
                        }
                    }
                },
                {
                    "data": "Date", "render": function (data, type, row, meta) {
                        var date1 = row.Date;
                        return '' + date1 + '';
                    }
                },
                {
                    "data": "Date", "render": function (data, type, row, meta) {
                        var date1 = row.DeletedDate;
                        var nowDate = new Date(parseInt(date1.substr(6)));
                        var result = nowDate.format("dd/mm/yyyy") + "";
                        return '' + result + '';
                    }
                },
                {
                    "data": "Date", "render": function (data, type, row, meta) {
                        return '' + row.DeleterName + '';
                    }
                },
                {
                    "data": "Id", "render": function (data, type, row, meta) {

                        if ($('#HealthCenterCanceledRequestDelete').val() == "value" ) {
                            var message = "@Resource.AreYouSureToDelete";
                            return '<a class="btn btn-default btn-sm" href="/Admin/CenterDeviceRequest/DDetail?Id=' + row.Id + '"> <i class="fa fa-eye"></i>  </a>  <a class="btn btn-danger btn-sm" onclick="return confirm(' + "'هل أنت متأكد من الحذف ؟'" + ');" href="/Admin/CenterDeviceRequest/Delete?Id=' + row.Id + '"><i class="fa fa-trash-o"></i>  </a>';
                        } else {
                            return '<a class="btn btn-default btn-sm" href="/Admin/CenterDeviceRequest/DDetail?Id=' + row.Id + '"> <i class="fa fa-eye"></i>  </a> ';

                        }


                    }
                },
            ],
            "serverSide": "true",
            "pageLength": 10,
            "paging": true,
            "bSort": false,
            "bFilter": false,
            "bInfo": true,
            fixedColumns: false
            , autoWidth: false
            , responsive: true,
            "processing": "true",
            "bPaginate": true,
            "language": {
                "processing": "........", "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Arabic.json"

            }



        });

    }

    function CheckBoxAll() {
        if ($('#CheckBoxAll').prop("checked") == true) {
            $('.CheckBox').prop("checked", true);
        }
        else {
            $('.CheckBox').prop("checked", false);
        }
    }

    function DeleteSelected()
    {
        var Selected = "";
        $('input:checkbox.CheckBox').each(function () {
            if (this.checked == true)
            {
                debugger;
                Selected += (this.value + ",");
            }
        });
        if (Selected != "")
        {
            var isconfirm = confirm('@Resource.AreYouSureToDelete ');
            if (isconfirm)
            {
                $('#DeleteSelected').prop('disabled', true);
                window.open("/Admin/CenterDeviceRequest/DeleteSelected?Selected=" + Selected, '_self');
            }
        }
    }

</script>

