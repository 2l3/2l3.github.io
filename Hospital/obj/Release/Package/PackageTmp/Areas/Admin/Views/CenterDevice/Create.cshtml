@model Hospital.Models.CenterDevice
@using Hospital.Resources;

@{
    ViewBag.Title = Resource.CenterDevices;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    @using (Html.BeginForm("Create", "CenterDevice", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <p style="text-align:center;color:red">@ViewBag.Message</p>

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.NameAr :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.NameAr, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NameAr, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.NameEn :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.NameEn, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.NameEn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.Company :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Com, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Com, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.DeviceModel :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.ComputerNumber :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.ComputerNumber, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.ComputerNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.Serial :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Serial, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Serial, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.Centers :
                </div>
                <div class="col-md-8">
                   <select class="form-control" id="Center" name="Center" onchange="CenterChanged()" required>
                       @foreach (var item in ViewBag.Centers)
                       {
                           if (CultureHelper.CurrentLanguageCode == 1)
                           {
                            <option value="@item.Id">@item.NameAr</option>
                           }
                           else
                           {
                            <option value="@item.Id">@item.NameEn</option>
                           }
                       }
                   </select>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.CenterDeviceUnits :
                </div>
                <div class="col-md-8">
                    <select class="form-control" id="CenterDeviceUnitId" name="CenterDeviceUnitId" required>
                        @foreach (var item in ViewBag.CenterDeviceUnit)
                        {
                            if (CultureHelper.CurrentLanguageCode == 1)
                            {
                                
                                    <option class="CenterUnits Center_@item.CenterId" value="@item.Id">@item.NameAr</option>
                                
                            }
                            else
                            {
                               
                                    <option class="CenterUnits Center_@item.CenterId" value="@item.Id">@item.NameEn</option>
                                
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.DeviceType :
                </div>
                <div class="col-md-8">
                    @Html.DropDownList("DeviceTypeId", null, htmlAttributes: new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.DeviceTypeId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.DeviceCategory :
                </div>
                <div class="col-md-8">
                    <select class="form-control" required id="DeviceCategoryId" name="DeviceCategoryId">
                        <option value="1">A</option>
                        <option value="2">B</option>
                        <option value="3">C</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.ShowDaman :
                </div>
                <div class="col-md-8">
                    @Html.CheckBox("ShowDaman")
                </div>
            </div>
            <div class="form-group Daman" style="display:none">
                <div class="control-label col-md-2">
                    @Resource.CompanyName :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group Daman" style="display:none">
                <div class="control-label col-md-2">
                    @Resource.DamanExpireDate :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.DamanExpireDate, new { htmlAttributes = new { @class = "form-control",@type="date" } })
                    @Html.ValidationMessageFor(model => model.DamanExpireDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@Resource.Save" class="btn btn-primary" name="Save" />
                    <a class="btn btn-default" href="@Url.Action("Index","CenterDevice")"> @Resource.BackToHome </a>
                </div>
            </div>
        </div>
    }


</div>

<script type="text/javascript" src="~/Content2/Ar-assets/js/lib/jquery-1.11.min.js"></script>

<script>


    $(function () {
        $('form').submit(function () {
            $('input[name="Save"]').prop('disabled', true);
        });

        var CenterId = $('#Center :selected').val();
        $('.CenterUnits').hide();
        $('.Center_' + CenterId).show();
    });

    $('#ShowDaman').change(function () {
        if ($('#ShowDaman').prop("checked") == true)
        {
            $('#CompanyName').val("");
            $('#DamanExpireDate').val("");
            $('.Daman').show("slow");
        }
        else
        {
            $('.Daman').hide("slow");
        }
    });

    function CenterChanged()
    {
        var CenterId = $('#Center :selected').val();
        $('.CenterUnits').hide();
        $('.Center_' + CenterId).show();
        $('#CenterDeviceUnitId').val("");
    }

</script>