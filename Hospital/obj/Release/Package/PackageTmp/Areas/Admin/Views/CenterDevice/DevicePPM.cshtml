@model IEnumerable<Hospital.Models.DeviceUnit>
@using Hospital.Resources;
@{
    ViewBag.Title = Resource.DevicePPM;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript" src="~/Content2/Ar-assets/js/lib/jquery-1.11.min.js"></script>
<script>

    function GetReportPrint() {
        var DateFrom = $('#DateFrom').val();
        var DateTo = $('#DateTo').val();
        if (DateFrom == "" || DateTo == "")
            return alert("@Resource.ChooseDates");
        window.open("/Admin/Device/PMMReportPrint?DateFrom=" + DateFrom + "&DateTo=" + DateTo + "&DeviceUnitId=" + $('#DeviceUnit :selected').val() + "&EngineerId=" + $('#Engineer :selected').val(), '_blank');
    }

</script>



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @Resource.DevicePPM
                </h3>
            </div>
            <div class="panel-body">
                <!--Table Wrapper Start-->
                <div class="row">
                    <div class="col-lg-2">
                        <input type="text" placeholder="@Resource.DateFrom" value="" class="form-control" id="DateFrom" />
                    </div>
                    <div class="col-lg-2">
                        <input type="text" placeholder="@Resource.DateTo" value="" class="form-control" id="DateTo" />
                    </div>
                    <div class="col-lg-3">
                        <select class="form-control" id="DeviceUnit">
                            @foreach (var item in Model)
                            {
                                if (CultureHelper.CurrentLanguageCode == 1)
                                {
                                    <option value="@item.Id">@item.NameAr</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.NameEn</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-lg-3">
                        <select class="form-control" id="Engineer">
                            <option value="0" selected>@Resource.Engineers</option>
                            @foreach (var item in ViewBag.Engineers)
                            {
                                if (CultureHelper.CurrentLanguageCode == 1)
                                {
                                    <option value="@item.Id">@item.NameAr</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.NameEn</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-lg-2">
                        <input class="btn btn-primary btn-sm" type="button" value="@Resource.Print" onclick="GetReportPrint()" />
                    </div>

                </div>
                <!--Table Wrapper Finish-->
            </div>
        </div>
    </div>
</div>


