@model Hospital.Models.ReportSetting
@using Hospital.Resources;

@{
    ViewBag.Title = Resource.ReportSettings;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    @using (Html.BeginForm("Edit", "ReportSetting", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(s => s.Id)
        @Html.HiddenFor(s => s.CreatedBy)
        @Html.HiddenFor(s => s.CreatedDate)
        @Html.HiddenFor(s => s.CreatorName)
        <p style="text-align:center;color:red">@ViewBag.Message</p>

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.NameAr :
                </div>
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.DescAr, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.DescAr, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.NameEn :
                </div>
                <div class="col-md-8">
                    @Html.TextAreaFor(model => model.DescEn, new { @class = "form-control", @required = "required" })
                    @Html.ValidationMessageFor(model => model.DescEn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.Sort :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Sort, new { htmlAttributes = new { @class = "form-control",@type="number",@min="1", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Sort, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Resource.FontSize :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.FontSize, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "1", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.FontSize, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@Resource.Save" class="btn btn-primary" name="Save" />
                    <a class="btn btn-default" href="@Url.Action("Index","ReportSetting")"> @Resource.BackToHome </a>
                </div>
            </div>
        </div>
    }


</div>

<script type="text/javascript" src="~/Content2/Ar-assets/js/lib/jquery-1.11.min.js"></script>

<script>


    $(function () {
        $('form').submit(function () {
            $('input[name="Save"]').prop('disabled', true);
        });
    });

</script>