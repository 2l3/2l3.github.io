@model IEnumerable<Hospital.Models.Role>
@{
    ViewBag.Title = Hospital.Resources.Resource.Roles;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var List = new List<Hospital.Models.UserRole>(ViewBag.UserRoles);
}
<input type="hidden" value="@ViewBag.User.Id" id="UserId" />

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @Hospital.Resources.Resource.Roles ( @ViewBag.User.Name  )
                    <button class="btn btn-app" id="Save" href="#" onclick="Save()" style="float:@Hospital.Resources.Resource.right;margin-top:-7px;">
                        <i class="fa fa-save"></i>
                        @Hospital.Resources.Resource.Save
                    </button>
                </h3>
            </div>
            <div class="panel-body">
                <!--Table Wrapper Start-->
                <div class="ls-editable-table table-responsive ls-table">
                    <table class="table table-bordered table-striped table-bottomless" id="Table">
                        <thead>
                            <tr>
                                <th>
                                    <input type="checkbox" id="CheckBoxAll" name="CheckBoxAll" onchange="CheckBoxAll()" />
                                </th>
                                <th>@Hospital.Resources.Resource.RoleName </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (List.Any(s => s.RoleId == item.Id))
                                        {
                                            <input type="checkbox" checked value="@item.Id" name="CheckBox" class="CheckBox" />
                                        }
                                        else
                                        {
                                            <input type="checkbox" value="@item.Id" name="CheckBox" class="CheckBox" />
                                        }
                                    </td>
                                    @if (CultureHelper.CurrentLanguageCode == 1)
                                    {
                                        <td>@Html.DisplayFor(modelItem => item.TitleAr)</td>
                                    }
                                    else
                                    {
                                        <td>@Html.DisplayFor(modelItem => item.TitleEn)</td>
                                    }
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!--Table Wrapper Finish-->
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="~/Content2/Ar-assets/js/lib/jquery-1.11.min.js"></script>
<script>

    $(function () {

        $('#Table').dataTable({
            "pageLength": 100, bFilter: true, paging: false, bInfo: true, ordering: false
        });
    })

    function CheckBoxAll()
    {
        if ($('#CheckBoxAll').prop("checked") == true)
        {
            $('.CheckBox').prop("checked", true);
        }
        else
        {
            $('.CheckBox').prop("checked", false);
        }
    }

    function Save()
    {
        var Selected = "";
        $('input:checkbox.CheckBox').each(function () {
            if (this.checked == true)
            {
                debugger;
                Selected += (this.value + ",");
            }
        });
       
            var UserId = $('#UserId').val();
            var isconfirm = confirm('@Hospital.Resources.Resource.AreYouSure ');
            if (isconfirm)
            {
                $('#Save').prop('disabled', true);
                window.open("/Admin/ApplicationUsers/SaveRoles?Selected=" + Selected + "&UserId=" + UserId, '_self');
            }
    }

</script>