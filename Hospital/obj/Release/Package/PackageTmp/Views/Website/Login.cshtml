@{
    Layout = null;
}
<html lang="@CultureHelper.CurrentNeutralCulture" dir="@CultureHelper.CurrentCultureHtmlDirection">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- SITE TITLE -->
    <!-- Bootstrap min CSS -->
    <link href="~/Content/media/css/bootstrap.min.css" rel="stylesheet">
    <!-- Owl Carouse CSS -->
    <link href="~/Content/media/css/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/media/css/owl.theme.default.css" rel="stylesheet">
    <!-- Style CSS -->
    <link href="~/Content/media/css/style.css" rel="stylesheet">
    <!-- RTL CSS -->
    <link href="~/Content/media/css/rtl.css" rel="stylesheet">
    <!-- Responsive CSS -->
    <link href="~/Content/media/css/responsive.css" rel="stylesheet">
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/assets/img/lolo2.png">

    @if (CultureHelper.CurrentLanguageCode != 2)
    {
        <title>الصيانه الطبية</title>
        <link href="https://fonts.googleapis.com/css2?family=Tajawal&amp;display=swap" rel="stylesheet">
        <style>
            body {
                font-family: 'Tajawal',Tahoma !important;
            }

            h2, h1, h3, h4, h5, h6, a, p, li, span {
                font-family: 'Tajawal',Tahoma !important;
                letter-spacing: 0px !important;
            }

            .gradient-bg {
                background: linear-gradient(to right, #428bca,#e0e0e0) !important;
            }

            .ColorSwitcher {
                display: none;
            }

            .single-slider-item .welcome-phone {
                max-width: 500px !important;
            }

            .slider-text {
                text-align: center !important;
            }


            @@media only screen and (max-width: 767px) {
                .top-menu .navbar-brand {
                    color: black;
                    font-size: 20px;
                    padding: 15px 15px;
                }
            }
        </style>
    }
    else
    {
        <title>Medical Maintenance</title>
        <style>
            .gradient-bg {
                background: linear-gradient(to right, #428bca,#e0e0e0) !important;
            }

            .ColorSwitcher {
                display: none;
            }

            .single-slider-item .welcome-phone {
                max-width: 500px !important;
            }

            .slider-text {
                text-align: center !important;
            }



            @@media only screen and (max-width: 767px) {
                .top-menu .navbar-brand {
                    color: black;
                    font-size: 20px;
                    padding: 15px 15px;
                }
            }
        </style>
    }
    <style>
        .DeviceUnit {
            display: none;
        }

        .Logo {
            width: 120px;
        }

        @@media only screen and (max-width: 600px) {
            .Logo {
                width: 50px;
            }

            #Table {
                overflow: scroll;
                width: 330px;
            }
        }

        ul {
            list-style-type: none;
        }

        .single-slider-item h1 {
            color: #ffffff;
            font-size: 35px;
            line-height: 55px;
            margin: 0;
            text-transform: uppercase;
        }
    </style>



</head>

<body data-spy="scroll" data-offset="0">
    <!-- START PRELOADER -->
    <div class="preloader-wrap" style="display: none;">
        <div class="preloader">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
    <!-- END PRELOADER -->
    <!-- START NAVBAR -->
    <nav class="navbar fixed-top navbar-expand-md navbar-light top-menu">
        <div class="container">

            @if (CultureHelper.CurrentLanguageCode == 1)
            {
                <a class="navbar-brand" href="#" style="font-size: 15px;">
                    <img src="~/Content/assets/img/lolo2.png" class="Logo">
                </a>

                @Html.Partial("_LanguageSwitcher", new LanguageSwitcherViewModel())

            }
            else
            {
                @Html.Partial("_LanguageSwitcher", new LanguageSwitcherViewModel())

                <a class="navbar-brand" href="#" style="font-size: 15px;">
                    <img src="~/Content/assets/img/lolo2.png" class="Logo">
                </a>
            }

        </div>
    </nav>
    <input type="hidden" value="@ViewBag.Type" id="Type" />
    <input type="hidden" value="@ViewBag.DeviceId" id="DeviceId" />
    <!-- END NAVBAR -->
    <!-- START HOMEPAGE SLIDER -->
    <div id="home" class="hompage-slides-wrapper">
        <div class="homepage-slides owl-carousel owl-theme owl-rtl owl-loaded">

            <div class="owl-stage-outer">
                <div class="owl-stage" style="transform: translate3d(3072px, 0px, 0px); transition: all 0s ease 0s; width: 7680px;">
                    <div class="owl-item active" style="width: 1536px;">
                        <div class="single-slider-item gradient-bg wave-bg-two">
                            <div class="slide-item-table">
                                <div class="slide-item-tablecell">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="slider-text">
                                                    @if (ViewBag.Type == "SendCenterRequestNoBarCode2")
                                                    {
                                                        if (CultureHelper.CurrentLanguageCode == 1)
                                                        {
                                                            <h1 style="text-align:center">
                                                                تسجيل الدخول لطلب البلاغ
                                                            </h1>

                                                        }
                                                        else
                                                        {
                                                            <h1 style="text-align:center">
                                                                Sign In To Request
                                                            </h1>
                                                        }
                                                        if (ViewBag.Error != null)
                                                        {
                                                            <h5 style="text-align:center;color:red">@ViewBag.Error</h5>
                                                        }

                                                        using (Html.BeginForm("SendCenterRequestNoBarCode2", "Website", FormMethod.Post))
                                                        {
                                                        <div class="slide-button">
                                                            <label style="color:white">@Hospital.Resources.Resource.Password</label>
                                                            <input type="hidden" value="@ViewBag.DeviceId" id="CenterId" name="CenterId" />
                                                            <input type="password" value="" id="Password" name="Password" class="form-control" />
                                                            <br />
                                                            <input type="submit" value="@Hospital.Resources.Resource.Login" name="Save" style="margin-bottom: 10px;" class="btn btn-primary">
                                                        </div>
                                                            }
                                                        }
                                                    else
                                                    {
                                                        if (CultureHelper.CurrentLanguageCode == 1)
                                                        {
                                                            <h1 style="text-align:center">
                                                                تسجيل الدخول لطلب البلاغ
                                                            </h1>

                                                        }
                                                        else
                                                        {
                                                            <h1 style="text-align:center">
                                                               Sign In To Request
                                                            </h1>
                                                        }
                                                        if (ViewBag.Error != null)
                                                        {
                                                            <h5 style="text-align:center;color:red">@ViewBag.Error</h5>
                                                        }
                                                            <div class="slide-button">
                                                                <label style="color:white">@Hospital.Resources.Resource.Password</label>
                                                                <input type="password" value="" id="Password" name="Password" class="form-control"  />
                                                                <br />
                                                                <input type="button" onclick="GoTo()" value="@Hospital.Resources.Resource.Login" name="Save" style="margin-bottom: 10px;" class="btn btn-primary">
                                                            </div>
                                                    }
                                                </div>
                                            </div><!-- END COL -->

                                        </div><!-- END ROW -->
                                    </div><!-- END CONTAINER -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><div class="owl-nav disabled"><button type="button" role="presentation" class="owl-prev"><i class="icofont-long-arrow-left"></i></button><button type="button" role="presentation" class="owl-next"><i class="icofont-long-arrow-right"></i></button></div><div class="owl-dots disabled"></div>
        </div>
    </div>



    <!-- END HOMEPAGE SLIDER -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/Content/media/js/jquery-1.12.4.min.js"></script>
    <script src="~/Content/media/js/bootstrap.min.js"></script>
    <!-- Owl Carousel JS -->
    <script src="~/Content/media/js/owl.carousel.min.js"></script>
    <!-- Custom JS -->
    <script src="~/Content/media/js/custom.js"></script>
    <script>
        var Password;
        $("input[type=password]").on('keyup', function () {
            Password = $(this).val();
        });

        function GoTo()
        {
            var DeviceId = $('#DeviceId').val();
            var Type = $('#Type').val();
            if (Type == "SendCenterRequestNoBarCode2")
            {
                window.open("/Website/" + Type + "?Password=" + Password + "&CenterId=" + DeviceId, '_self');
            }
            else if (Type == "SendRequestNoBarCode")
            {
                window.open("/Website/" + Type + "?Password=" + Password, '_self');
            }
            else
            {
                window.open("/Website/" + Type + "?Password=" + Password + "&DeviceId=" + DeviceId, '_self');
            }
        }
    </script>
</body>
</html>
