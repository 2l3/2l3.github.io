@model Hospital.Models.CreateUserViewModel
@{
    ViewBag.Title = Hospital.Resources.Resource.Users;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    }


<div class="content-wrapper">
    @using (Html.BeginForm("Edit", "ApplicationUsers", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(s => s.Id)
        <p style="text-align:center;color:red">@ViewBag.Message</p>

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Hospital.Resources.Resource.Name :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Hospital.Resources.Resource.UserName  :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Hospital.Resources.Resource.Email :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Hospital.Resources.Resource.Password :
                </div>
                <div class="col-md-8">
                    <input class="form-control" name="Password" id="Password" type="text" value="*****" required />
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Hospital.Resources.Resource.Phone  :
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">
                    @Hospital.Resources.Resource.Engineers :
                </div>
                <div class="col-md-8">
                    @Html.DropDownList("EngineerId", null, @Hospital.Resources.Resource.Engineers, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.EngineerId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@Hospital.Resources.Resource.Save" class="btn btn-primary" name="Save" />
                    <a class="btn btn-default" href="@Url.Action("Index","ApplicationUsers")">@Hospital.Resources.Resource.BackToHome </a>
                </div>
            </div>
        </div>
    }


</div>
<script type="text/javascript" src="~/Content2/Ar-assets/js/lib/jquery-1.11.min.js"></script>

<script>


    $(function () {
        $('form').submit(function () {
            $('input[name="Save"]').prop('disabled', true);
        });
    });

</script>