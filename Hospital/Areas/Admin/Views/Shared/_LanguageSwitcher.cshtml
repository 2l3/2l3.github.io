@model LanguageSwitcherViewModel

@foreach (var language in Model.Languages)
{
    if (CultureHelper.CurrentLanguageCode != language.ID)
    {
        <li class="nav-item" style="border: 2px solid white;">
            <a class="nav-link" href="/Base/SetCulture?lcid=@language.LCID&returnUrl=@Request.RawUrl"> <img style="max-width: 30px;" src="~/Content/assets/img/@language.Image" />  @language.Name</a>
        </li>
    }
}


