@using Hospital.Resources;
@{
    ViewBag.Title = Resource.PrintHospitalReportTemplate;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @Resource.PrintHospitalReportTemplate
                  
                </h3>
                
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12" style="text-align:center">
                        @if (CultureHelper.CurrentLanguageCode == 1)
                        {
                            <a class="btn btn-app" href="@Url.Action("EmptyJobOrderReport")" target="_blank" >
                                <i class="fa fa-print"></i>
                                تقرير طلب أصلاح
                            </a>

                            <a class="btn btn-app" href="@Url.Action("EmptyServiceRequest")" target="_blank" >
                                <i class="fa fa-print"></i>
                                تقرير طلب وكيل
                            </a>

                            <a class="btn btn-app" href="@Url.Action("EmptyPPM")" target="_blank" >
                                <i class="fa fa-print"></i>
                                تقرير PPM
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-app" href="@Url.Action("EmptyJobOrderReport")" target="_blank" >
                                <i class="fa fa-print"></i>
                                Job Order Report
                            </a>

                            <a class="btn btn-app" href="@Url.Action("EmptyServiceRequest")" target="_blank" >
                                <i class="fa fa-print"></i>
                                Service Request Sheet
                            </a>

                            <a class="btn btn-app" href="@Url.Action("EmptyPPM")" target="_blank" >
                                <i class="fa fa-print"></i>
                                PPM Report
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

