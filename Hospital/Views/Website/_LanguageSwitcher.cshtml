@model LanguageSwitcherViewModel

@foreach (var language in Model.Languages)
{
    if (CultureHelper.CurrentLanguageCode != language.ID)
    {
        if (CultureHelper.CurrentLanguageCode == 1)
        {
            <a  class="navbar-brand" href="/Website/SetCulture?lcid=@language.LCID&returnUrl=@Request.RawUrl" style="color:white;"> <img style="max-width: 40px;" src="~/Content/assets/img/@language.Image" />  </a>
        }
        else
        {
            <a  class="navbar-brand" href="/Website/SetCulture?lcid=@language.LCID&returnUrl=@Request.RawUrl" style="color:white;"> <img style="max-width: 40px;" src="~/Content/assets/img/@language.Image" />  </a>
        }
    }
}


